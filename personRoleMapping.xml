<?xml version="1.0"?>
<mapping>

  <description>
    This transformation map is describing the mapping between
    person/@role applied in ORBIT and the DDF/MXD format.

    BUGS
    Orbit's @role="inventor" and "supervisor" should be added to MXD.
  </description>
 
  <rule>
    <in>author</in>
    <out>pau</out>
  </rule>
  <rule>
    <in>corresponding author</in> 
    <out>pau</out>
  </rule>
  <rule>
    <in>editor</in> 
    <out>ped</out>
  </rule>
  <rule>
    <in>supervisor</in>
    <out>pau</out> <!-- FIXME missing fit in MXD format -->
  </rule>
  <rule>
    <in>inventor</in>
    <out>pau</out> <!-- FIXME missing fit in MXD format -->
  </rule>
  <rule>
    <in></in>      <!-- FIXME to be corrected in Orbit -->
    <out>pau</out>
  </rule>
</mapping>
