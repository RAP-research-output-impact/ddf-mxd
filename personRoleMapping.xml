<?xml version="1.0"?>
<mapping>

  <description>
    This transformation map is describing the mapping between
    person/@role applied in ORBIT and the DDF/MXD format.
  </description>
 
  <rule>
    <in>author</in>
    <out>pau</out>
  </rule>
  <rule>
    <in>corresponding author</in> 
    <out>pau</out>
  </rule>
  <rule>
    <in>author-anonymous</in>
    <out>pa2</out>
  </rule>
  <rule>
    <in>editor</in> 
    <out>ped</out>
  </rule>
  <rule>
    <in>supervisor</in>
    <out>sup</out>
  </rule>
  <rule>
    <in>inventor</in>
    <out>inv</out>
  </rule>
  <rule>
    <in></in>
    <out>pau</out>
  </rule>
</mapping>
